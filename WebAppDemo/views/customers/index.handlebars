{{#each customers}}
<div class="card card-body mb-2">
  <h4>{{name}}</h4>
  <p>{{email}}</p>
  <p>{{phone}}</p>
  <p>{{dob}}</p>
  <p>{{address}}</p>
  <p>{{pType}}</p>
  
  <a class="btn btn-dark btn-block mb-2"
   href="/customers/edit/{{id}}">Edit</a>
  <form method= "post" action="/customers/{{id}}?_method=DELETE">
   <input type="hidden" name="_method" 
   value="DELETE">
   <input type="submit" class="btn btn-success btn-block" value="Delete">

  </form>
</div>
{{else}}
<p>No customer listed</p>
{{/each}}